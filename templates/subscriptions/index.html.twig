{% extends "base.html.twig" %}
{% block body %}
	<!--Section: Content-->
	{{ form_start(form,{action:path('app_subscriptions_checkout',{id:pack.id})}) }}
	<section class="text-center mt-4">

		<div class="btn-group mb-4" role="group" aria-label="Basic example">
			<button type="button" class="btn btn-primary active">Monthly billing</button>
			<button type="button" class="btn btn-primary">
				Annual billign
				<small>(2 months FREE)</small>
			</button>
		</div>

		<div class="row gx-lg-5">

			<div class="col-md-8 col-lg-6 col-xl-4 m-4">
				<div class="card rounded-3">
					<div class="card-body mx-1 my-2">
						<div class="d-flex align-items-center">
							<div>
								<i class="fab fa-cc-visa fa-4x text-black pe-3"></i>
								<i class="fab fa-cc-mastercard fa-4x text-warning pe-3"></i>
							</div>
							<div></div>
						</div>

						<div class="pt-3">
							<div class="d-flex flex-row pb-3">
								<div class="rounded border border-primary border-2 d-flex w-100 p-3 align-items-center" style="background-color: rgba(18, 101, 241, 0.07);">
									<div class="d-flex align-items-center pe-3">
										{{ form_row(form.payment)  }}
									</div>
									<div class="d-flex flex-column">
										<p class="mb-1 small text-primary">Total amount due</p>
										<h6 class="mb-0 text-primary">${{ pack.amount }}</h6>
									</div>
								</div>
							</div>

							{% if pack.name =="Pack Silver" %}
								<div class="d-flex align-items-center pe-3 mb-3">

									<select name="{{ field_name(form.country1) }}" id="" class="form-control">
										
										{% for label, value in field_choices(form.country1) %}
											<option value="{{ value }}">{{ label }}</option>
										{% endfor %}
									</select>
								</div>

								{% do form.country2.setRendered %}
							{% endif %}

							{% if pack.name =="Pack Silver / 6" %}
								<div class="d-flex align-items-center pe-3 mb-3">

									<select name="{{ field_name(form.country1) }}" id="" class="form-control">
										
										{% for label, value in field_choices(form.country1) %}
											<option value="{{ value }}">{{ label }}</option>
										{% endfor %}
									</select>
								</div>

								{% do form.country2.setRendered %}
							{% endif %}

							{% if pack.name =="Pack Gold"  %}
								<div class="d-flex align-items-center pe-3 mb-3">
									<select name="{{ field_name(form.country2) }}" id="" class="form-control">
									
										{% for label, value in field_choices(form.country2) %}
											<option value="{{ value }}">{{ label }}</option>
										{% endfor %}
									</select>
								</div>

								<div class="d-flex align-items-center pe-3 mb-3">

									<select name="{{ field_name(form.country1) }}" id="" class="form-control">
										
										{% for label, value in field_choices(form.country1) %}
											<option value="{{ value }}">{{ label }}</option>
										{% endfor %}
									</select>
								</div>
							{% endif %}

              	{% if pack.name =="Pack Gold / 6"  %}
								<div class="d-flex align-items-center pe-3 mb-3">
									<select name="{{ field_name(form.country2) }}" id="" class="form-control">
										
										{% for label, value in field_choices(form.country2) %}
											<option value="{{ value }}">{{ label }}</option>
										{% endfor %}
									</select>
								</div>

								<div class="d-flex align-items-center pe-3 mb-3">

									<select name="{{ field_name(form.country1) }}" id="" class="form-control">
										
										{% for label, value in field_choices(form.country1) %}
											<option value="{{ value }}">{{ label }}</option>
										{% endfor %}
									</select>
								</div>
							{% endif %}

             
              {% if pack.name =="Pack Platinium" %}
								<div class="d-flex align-items-center pe-3 mb-3">

									<select name="{{ field_name(form.country1) }}" id="" class="form-control">
										
										{% for label, value in field_choices(form.country1) %}
											<option value="{{ value }}">{{ label }}</option>
										{% endfor %}
									</select>
								</div>

								{% do form.country2.setRendered %}
							{% endif %}
             

              {% if pack.name =="Pack Platinium / 6" %}
								<div class="d-flex align-items-center pe-3 mb-3">

									<select name="{{ field_name(form.country1) }}" id="" class="form-control">
										<option value="{{ field_label(form.country1) }}" disabled>tous les pays</option>
										{% for label, value in field_choices(form.country1) %}
											<option value="{{ value }}" disabled>{{ label }}</option>
										{% endfor %}
									</select>
								</div>

								{% do form.country2.setRendered %}
							{% endif %}


              


						</div>

						<div class="d-flex justify-content-between align-items-center pb-1">

							{% if app.user.subscription.isPaid is defined and app.user.subscription.isPaid  is not  null %}
								<span class="text text-primary">Vous avez deja un abonnement en cours voulez vous le modifier?
								</span>
							{% endif %}

							<button type="submit" class="btn btn-primary btn-lg">Pay amount</button>
						</div>
					</div>
				</div>
			</div>


			<div
				class="col-lg-3 col-md-6 m-4">

				<!-- Card -->
				<div class="card">

					<div class="card-header bg-white py-3">
						<p class="text-uppercase small mb-2">
							<strong>{{ pack.name }}</strong>
						</p>
						<h5 class="mb-0">${{ pack.amount }}/month</h5>
					</div>

					<div class="card-body">
						<ul class="list-group list-group-flush">
							<li class="list-group-item">{{ pack.description }}</li>
							<li class="list-group-item">Feature</li>
							<li class="list-group-item">Feature</li>
							<li class="list-group-item">Feature</li>
							<li class="list-group-item">Feature</li>
							<li class="list-group-item">Feature</li>
						</ul>
					</div>


				</div>
				<!-- Card -->

			</div>
			<!--Grid column-->

		</div>
	</section>
	<!--Section: Content-->
	{{ form_end(form) }}

{% endblock %}
